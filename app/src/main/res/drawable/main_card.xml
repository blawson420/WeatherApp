<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#002B67" />
            <corners
                android:bottomLeftRadius="75dp"
                android:bottomRightRadius="75dp" />
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="20dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:angle="90"
                android:startColor="#106CF3"
                android:endColor="#12B4FD"/>
            <corners
                android:bottomLeftRadius="75dp"
                android:bottomRightRadius="75dp" />
            <stroke
                android:width="2dp"
                android:color="#2F99EC" />
        </shape>
    </item>
</layer-list>